server {
    listen {{ getv "/listen_port" }} default_server;
    listen [::]:{{ getv "/listen_port" }} default_server ipv6only=on;
    
    {{if exists "/client_max_body_size"}}
    client_max_body_size {{ getv "/client_max_body_size" }}; 
    {{end}}
    
    location = /nginx_health {
      return 200;
    }

    location / {
        proxy_pass http://app:{{ getv "/backend_port" }};
        proxy_redirect off;
        proxy_http_version 1.1;

        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
    }    
}
